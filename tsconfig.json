{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "outDir": "dist",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
  },
  "include": ["src"],         // ✅ Only include source files
  "exclude": ["dist", "test", "data"]  // ✅ Now this works properly
}